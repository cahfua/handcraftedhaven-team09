//prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(BUYER)
  seller    Seller?
  reviews   Review[]
  createdAt DateTime @default(now())
}

model Seller {
  id        String   @id @default(cuid())
  userId    String   @unique
  bio       String?
  story     String?
  location  String?
  avatarUrl String?
  user      User     @relation(fields: [userId], references: [id])
  products  Product[]
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(cuid())
  sellerId    String
  title       String
  description String
  priceCents  Int
  category    String
  imageUrl    String?
  seller      Seller   @relation(fields: [sellerId], references: [id])
  reviews     Review[]
  createdAt   DateTime @default(now())
}

model Review {
  id        String   @id @default(cuid())
  productId String
  userId    String
  rating    Int
  comment   String
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@index([productId])
}

enum Role {
  BUYER
  SELLER
}
